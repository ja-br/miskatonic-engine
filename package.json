{
  "name": "miskatonic-engine",
  "version": "0.1.0",
  "private": true,
  "description": "Miskatonic Engine - Desktop Game Engine",
  "main": "dist/main/index.js",
  "license": "MIT",
  "author": "Miskatonic Team",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "node scripts/dev.js",
    "build": "node scripts/build.js",
    "build:main": "webpack --config config/webpack.main.config.js",
    "build:preload": "webpack --config config/webpack.preload.config.js",
    "build:renderer": "cd packages/renderer && vite build",
    "clean": "node scripts/clean.js",
    "test": "vitest",
    "test:unit": "vitest run --dir tests/unit",
    "test:integration": "vitest run --dir tests/integration",
    "test:e2e": "playwright test",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "docs": "typedoc --out docs/api packages/*/src"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@types/node": "^22.19.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "concurrently": "^8.2.2",
    "electron": "^37.9.0",
    "electron-builder": "^26.0.12",
    "eslint": "^8.55.0",
    "prettier": "^3.1.1",
    "ts-loader": "^9.5.1",
    "typedoc": "^0.25.4",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4",
    "wait-on": "^7.2.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "wgpu-matrix": "^3.4.0"
  }
}
